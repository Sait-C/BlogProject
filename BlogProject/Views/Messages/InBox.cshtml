@using EntityLayer.Concrete
@model List<Message2>

@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>InBox</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Subject</th>
        <th>Sender</th>
        <th>Date</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Subject</td>
            <td>@item.Sender.FullName</td>
            <td>@(((DateTime)item.MessageDate).ToString("dd-MM-yyyy"))</td>
            <td><a href="/Messages/MessageDetails/@item.Id" class="btn btn-outline-facebook">
                Open the Message</a></td>
        </tr>
    }
</table>
<a href="/Messages/CreateMessage/" class="btn btn-gradient-success">Create New Message</a>