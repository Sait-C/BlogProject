@model List<EntityLayer.Concrete.Blog>

<div class="tech-btm">
    <h3>Latest Posts</h3>
    @foreach (var item in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a href="/Blogs/BlogDetails/@item.BlogId">
                    <img src="@item.ThumbnailImage" class="card-img-top img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a href="/Blogs/BlogDetails/@item.BlogId">
                        @if (item.Content != null && item.Content.Length > 50)
                        {   //contentin 130.(indexine) kadarki son bosluk karakterine kadar goster
                            @item.Content.Substring(0, item.Content.Substring(0, 50).LastIndexOf(" "))
                        }
                        else //eger item.Content bos ise veya 130 karakterden az ise
                        {
                            //tum contenti goster
                            @item.Content
                        }...
                    </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @(((DateTime)item.CreatedDate)
                                                        .ToString("dd-MMM-yyyy"))
                    </span>
                </div>
            </div>

        </div>
    }

</div>