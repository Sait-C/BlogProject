@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">
    <h4>Comments</h4>

    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>
                        @item.Content
                    </p>
                </div>
            </div>
        }
    }
    else
    {

        <p>Bu blogda henüz yorum yapılmadı.İlk yorumu siz yapın!</p>
    }
</div>