@*addTagHelper: TagHelperlari kullanilabilir hale getirir*@
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model BlogProject.Models.RegisterViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Register Now</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @*(yonlendirecegi action, index hangi controllerda, peki bu ne zaman calisacak)*@
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Full Name</label>
                            @*Html.TextBoxFor(x => x.FullName) seklinde yapilmasi daha iyi olur.
                                fakat ben bu document icin model hakkımı RegisterViewModel icin 
                                kullandigimdan x.FullName yazarak Writer'in FullNamesine 
                                ulasamiyorum o yuzden TextBox kullanip ilgili propertynin
                                adini yaziyorum*@
                            @Html.TextBox("FullName")
                            @*Html.ValidationMessageFor(x=>x.FullName)*@
                            @Html.ValidationMessage("FullName")
                            @*<input type="text" class="form-control" id="validationDefault01" 
                                name="FullName" placeholder="" required="">*@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Email</label>
                            @Html.TextBox("Email")
                            @Html.ValidationMessage("Email")
                            @*<input type="email" class="form-control" id="validationDefault02" name="Email" placeholder="" required="">*@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            @Html.TextBox("Password")
                            @Html.ValidationMessage("Password")
                            @*<input type="password" class="form-control" id="password1" name="Password" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Image Path</label>
                            @Html.TextBox("WriterImage")
                            @Html.ValidationMessage("WriterImage")
                            @*<input type="text" class="form-control" id="password1" name="WriterImage" placeholder="" required="">*@
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                    <p>
                        <a href="#" id="btn1">By clicking Signup, I agree to your terms</a>
                    </p>
                }
            </div>
        </div>
    </div>
    <script>
        $('#btn1').click(function () {
            swal("Sitemizde verdiğiniz mail adresi üzerinden bilgi ve haber e - postalari spam ölçüsüne varmadan gönderilmeye devam edilecektir.Eğer e - posta bülteninden çıkmak isterseniz mail ileti dizisini durdurabilirsiniz.Şifre ve mail adresleriniz şifrelenmiş formatta herhangi bir kullanıcının görmeyeceği şekilde veritabanlarımızda saklanmaktadır.");
        });
    </script>
</section>